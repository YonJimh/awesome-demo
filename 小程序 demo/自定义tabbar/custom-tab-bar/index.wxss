.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 106rpx;
  background: white;
  display: flex;
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0rpx -4rpx 8rpx rgba(3, 3, 3, 0.13);
}

