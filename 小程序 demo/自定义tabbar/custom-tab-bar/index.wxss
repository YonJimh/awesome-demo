.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* position: relative; */
}

.tab-bar-item image {
  width: 54rpx;
  height: 54rpx;
}

.tab-bar-item view {
  font-size: 20rpx;
}

.middle {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  bottom: 38rpx;
  background: #fff;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.middle image {
  width: 88rpx;
  height: 88rpx;
}

