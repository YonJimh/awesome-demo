.serve-mask {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
}

.serve-mask .content {
  width: 100%;
  height: 56%;
  position: absolute;
  bottom: 0;
}

.serve-column {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 380rpx;
  align-content: space-between;
}
.serve-column .column-tiem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  flex: none;
}
.serve-column .column-tiem image {
  width: 104rpx;
  height: 104rpx;
}
.serve-column .column-tiem view {
  margin-top: 18rpx;
  color: #ffffff;
  font-size: 28rpx;
}
.cancel {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 120rpx;
}
.cancel image {
  width: 80rpx;
  height: 80rpx;
}
